{
  "$schema": "https://raw.githubusercontent.com/nicosolo/tauri-schema/refs/heads/master/tauri.conf.json",
  "productName": "Twitch Overlay",
  "version": "1.0.0",
  "identifier": "com.twitch.overlay",
  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../frontend && bun run dev",
    "frontendDist": "../frontend/dist",
    "beforeBuildCommand": "cd ../web && bun run build && cd ../frontend && bun run build"
  },
  "app": {
    "windows": [],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
