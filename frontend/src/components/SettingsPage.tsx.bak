          port = 8080;
          console.log('Using default port 8080 for music control');
        }
      }
      
      const url = `http://localhost:${port}/api/music/control/${endpoint}`;
      
      const options: RequestInit = {
        method: 'POST'
      };
      
      // Only add headers and body if needed
      if (body) {
        options.headers = { 'Content-Type': 'application/json' };
        options.body = JSON.stringify(body);
      }
      
      await fetch(url, options);
    } catch (error) {
      console.error(`Failed to send ${endpoint} command:`, error);
      setIsControlDisabled(false);
    }
  };
  
