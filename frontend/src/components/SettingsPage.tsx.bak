  const sendMusicControlCommand = async (endpoint: string, body?: any) => {
    // ãƒ‡ãƒã‚¦ãƒ³ã‚¹å‡¦ç†: æ—¢ã«å‡¦ç†ä¸­ãªã‚‰ä½•ã‚‚ã—ãªã„
    if (isControlDisabled) {
